# Flask
FLASK_SECRET_KEY=change-this-secret
# App admin credentials (basic demo auth)
ADMIN_EMAIL=
ADMIN_PASSWORD=

# Google Cloud credentials (Service Account JSON file path)
GOOGLE_APPLICATION_CREDENTIALS=./google-service-account.json

# Google Drive: parent folder id where screenshots/reports will be uploaded
DRIVE_PARENT_FOLDER_ID=PUT_YOUR_DRIVE_FOLDER_ID

# Google Sheets: spreadsheet id where logs will be appended
SHEETS_SPREADSHEET_ID=PUT_YOUR_SHEET_ID

# Public App URL for PDF footer (optional, for hosted demos)
PUBLIC_APP_URL=https://your-deployment-url.example.com
